<%= form_tag complete_order_path, :method => 'get', remote: true do %>
  <div class="form-group row">     
    <label for="inputName" class="col-sm-2 col-form-label">Name</label>   
    <div class="col-sm-10">
        <%= text_field_tag :name, params[:name], class:'form-control', placeholder:'Your name', type:'text', value: @order.name %>
    </div>   
  </div>
  <div class="form-group row">     
    <label for="inputName" class="col-sm-2 col-form-label">Phone Number</label>   
    <div class="col-sm-10">
        <%= text_field_tag :phone_number, params[:phone_number], class:'form-control', placeholder:'Your phone', type:'text', value: @order.phone_number %>
    </div>   
  </div>
  <div class="form-group row">     
    <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>   
    <div class="col-sm-10">
        <%= text_field_tag :email, params[:email], class:'form-control', placeholder:'yourmail@your.domain', type:'email', value: @order.email %>
    </div>   
  </div>
  <div class="form-group row">     
    <label for="inputName" class="col-sm-2 col-form-label">Address</label>   
    <div class="col-sm-10">
        <%= text_field_tag :address, params[:address], class:'form-control', placeholder:'Your address', type:'text', value: @order.address %>
    </div>   
  </div>
  <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <%= submit_tag("Complete Order", :class=>"btn btn-primary") %>
      </div>
    </div>    
<% end %>